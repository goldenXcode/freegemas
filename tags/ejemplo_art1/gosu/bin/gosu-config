#!/bin/bash
while test $# -gt 0; do
    case $1 in
    --libs)
    echo "-L/usr/lib -lSDL -lSDL_mixer -L -lX11 -pthread -lpangoft2-1.0 -lpango-1.0 -lfreetype -lfontconfig -lgobject-2.0 -lgmodule-2.0 -lgthread-2.0 -lrt -lglib-2.0   -lpng -lstdc++ -lGL -lSDL_ttf ";;
    --cxxflags)
    echo "-fPIC -I.. -I/usr/include/SDL -D_GNU_SOURCE=1 -D_REENTRANT -Wall -pthread -I/usr/include/pango-1.0 -I/usr/include/freetype2 -I/usr/include/glib-2.0 -I/usr/lib/glib-2.0/include -DHAVE_SYS_STAT_H -DNDEBUG -O3 -pipe -fomit-frame-pointer -I/usr/include/SDL";;
    esac
    shift
done
